<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SoftKob - Motel Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        :root { --sk-blue: #1C4E80; --sk-yellow: #F4C21E; --bg-light: #eef2f5; }
        body { font-family: 'Poppins', sans-serif; background-color: var(--bg-light); padding-bottom: 50px;}
        .navbar-sk { background: var(--sk-blue); color: white; padding: 15px 0; box-shadow: 0 4px 6px rgba(0,0,0,0.1); }
        .card-custom { border: none; border-radius: 12px; box-shadow: 0 2px 15px rgba(0,0,0,0.05); background: white; margin-bottom: 20px; }
        .btn-sk { background-color: var(--sk-blue); color: white; border: none; }
        .btn-sk:hover { background-color: #153a61; color: var(--sk-yellow); }
        .badge-price { background-color: var(--sk-yellow); color: #000; font-weight: bold; }
        
        /* Animaci贸n para nuevas filas */
        .fila-ocupacion { animation: fadeIn 0.3s ease-in-out; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(-10px); } to { opacity: 1; transform: translateY(0); } }
    </style>
</head>
<body>

<nav class="navbar-sk sticky-top">
    <div class="container d-flex justify-content-between align-items-center">
        <h3 class="m-0 fw-bold">SoftKob <span style="color:var(--sk-yellow); font-size:0.5em;">MOTEL PRO</span></h3>
        <% if (modo === 'dashboard') { %>
            <div class="d-flex gap-2">
                <button class="btn btn-sm btn-outline-light" data-bs-toggle="modal" data-bs-target="#modalNuevaHab">
                    + Habitaci贸n
                </button>
                <form action="/reset-total" method="POST" onsubmit="return confirm('驴Borrar TODO?');" style="display:inline;">
                    <button class="btn btn-sm btn-outline-warning">Reiniciar</button>
                </form>
            </div>
        <% } %>
    </div>
</nav>

<div class="container mt-4">

    <% if (modo === 'setup') { %>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card card-custom p-5">
                    <h2 class="text-center text-primary mb-3">Configuraci贸n Inicial</h2>
                    <form action="/guardar-config" method="POST">
                        <div class="mb-4">
                            <label class="fw-bold">Nombre del Motel</label>
                            <input type="text" name="nombreNegocio" class="form-control form-control-lg" placeholder="Ej: Motel Los Sauces" required>
                        </div>
                        
                        <label class="fw-bold mb-2">Registra al menos una habitaci贸n:</label>
                        <div id="container-setup-habs">
                            </div>
                        
                        <button type="button" class="btn btn-secondary btn-sm mb-4" onclick="agregarFilaSetup()">+ Agregar otra al inicio</button>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-sk btn-lg">Guardar y Comenzar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <script>
            // Script simple para setup inicial
            function agregarFilaSetup() {
                const div = document.createElement('div');
                div.className = 'row g-2 mb-2';
                div.innerHTML = `
                    <div class="col-5"><input type="text" name="room_name" class="form-control" placeholder="Nombre/N煤mero" required></div>
                    <div class="col-4">
                        <select name="room_type" class="form-select">
                            <option value="Sencilla">Sencilla</option><option value="Jacuzzi">Jacuzzi</option><option value="Suite">Suite</option>
                        </select>
                    </div>
                    <div class="col-3"><input type="number" name="room_price" class="form-control" placeholder="$ Precio" required></div>
                `;
                document.getElementById('container-setup-habs').appendChild(div);
            }
            // Inicializar con 1 fila
            window.onload = agregarFilaSetup; 
        </script>
    <% } %>


    <% if (modo === 'dashboard') { %>
        
        <div class="text-center mb-4">
            <h2 class="fw-bold" style="color:var(--sk-blue)"><%= config.nombre %></h2>
        </div>

        <div class="row g-4">
            
            <div class="col-lg-5">
                <div class="card card-custom p-4">
                    <h4 class="mb-3 border-bottom pb-2"> Nuevo Cierre de Turno</h4>
                    <form action="/agregar-turno" method="POST">
                        <div class="row mb-3">
                            <div class="col-6">
                                <label class="small fw-bold">Fecha</label>
                                <input type="date" name="fecha" class="form-control" required>
                            </div>
                            <div class="col-6">
                                <label class="small fw-bold">Encargado</label>
                                <input type="text" name="trabajador" class="form-control" placeholder="Nombre" required>
                            </div>
                        </div>

                        <div class="bg-light p-3 rounded mb-3 border">
                            <label class="fw-bold mb-2">驴Cu谩ntas ocupaciones hubo?</label>
                            <div class="input-group">
                                <input type="number" id="num_ocupaciones" class="form-control" value="1" min="1">
                                <button type="button" class="btn btn-outline-primary" onclick="generarFormulario()">Generar Filas</button>
                            </div>
                            <small class="text-muted">Presiona el bot贸n para listar los espacios.</small>
                        </div>

                        <div id="lista-ocupaciones" class="mb-3">
                            </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-sk py-2" id="btn-guardar" style="display:none;"> Guardar Turno Completo</button>
                        </div>
                    </form>
                </div>

                <div class="card card-custom p-4">
                    <h5 class="text-secondary"> Consultar Reporte</h5>
                    <form action="/generar-informe" method="POST">
                        <div class="row g-2">
                            <div class="col-5"><input type="date" name="fechaInicio" class="form-control form-control-sm" required></div>
                            <div class="col-5"><input type="date" name="fechaFin" class="form-control form-control-sm" required></div>
                            <div class="col-2"><button class="btn btn-sm btn-dark w-100">IR</button></div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-lg-7">
                
                <% if (reporte) { %>
                    <div class="alert alert-warning border-warning shadow-sm">
                        <div class="row text-center align-items-center">
                            <div class="col">
                                <small class="text-muted text-uppercase">Turnos</small>
                                <div class="h4 mb-0"><%= reporte.turnos %></div>
                            </div>
                            <div class="col border-start border-end border-warning">
                                <small class="text-muted text-uppercase">Ocupaciones</small>
                                <div class="h4 mb-0"><%= reporte.ocupaciones %></div>
                            </div>
                            <div class="col">
                                <small class="text-muted text-uppercase">Total Dinero</small>
                                <div class="h4 mb-0 text-success fw-bold">$<%= reporte.totalCaja %></div>
                            </div>
                        </div>
                    </div>
                <% } %>

                <h5 class="mb-3 text-secondary">Historial Registrado</h5>
                <% if (turnos.length === 0) { %>
                    <div class="text-center p-5 text-muted bg-white rounded">No hay registros a煤n.</div>
                <% } %>

                <div class="accordion" id="accordionHistory">
                    <% turnos.forEach(function(t, index) { %>
                        <div class="accordion-item border-0 mb-3 shadow-sm rounded overflow-hidden">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed bg-white" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= index %>">
                                    <div class="d-flex w-100 justify-content-between align-items-center me-3">
                                        <div>
                                            <div class="fw-bold text-dark"><%= t.fecha %></div>
                                            <small class="text-muted"><%= t.trabajador %></small>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-secondary"><%= t.cantidadOcupaciones %> rentas</span>
                                            <span class="d-block text-success fw-bold">$<%= t.totalGeneral %></span>
                                        </div>
                                    </div>
                                </button>
                            </h2>
                            <div id="collapse<%= index %>" class="accordion-collapse collapse" data-bs-parent="#accordionHistory">
                                <div class="accordion-body bg-light p-2">
                                    <table class="table table-sm table-borderless mb-0">
                                        <thead class="text-muted small border-bottom">
                                            <tr><th>Habitaci贸n</th><th>Extra</th><th class="text-end">Total</th></tr>
                                        </thead>
                                        <tbody>
                                            <% t.ocupaciones.forEach(function(o) { %>
                                                <tr>
                                                    <td><%= o.cuarto %> <small class="text-muted">(<%= o.tipo %>)</small></td>
                                                    <td>
                                                        <% if(o.extra > 0) { %>
                                                            <span class="text-danger small">+<%= o.extra %> (<%= o.notaExtra %>)</span>
                                                        <% } else { %> - <% } %>
                                                    </td>
                                                    <td class="text-end fw-bold">$<%= o.subtotal %></td>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>

        <div class="modal fade" id="modalNuevaHab" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title">Agregar al Inventario</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form action="/agregar-habitacion-extra" method="POST">
                        <div class="modal-body">
                            <div class="mb-2"><label>Nombre/N煤mero</label><input type="text" name="nuevo_nombre" class="form-control" required></div>
                            <div class="mb-2">
                                <label>Tipo</label>
                                <select name="nuevo_tipo" class="form-select">
                                    <option value="Sencilla">Sencilla</option><option value="Jacuzzi">Jacuzzi</option><option value="Suite">Suite</option>
                                </select>
                            </div>
                            <div class="mb-2"><label>Precio</label><input type="number" name="nuevo_precio" class="form-control" required></div>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-primary w-100">Guardar Habitaci贸n</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script>
            // Convertimos la lista de habitaciones del backend a un objeto JS para usarlo al crear filas
            const habitacionesConfig = <%- JSON.stringify(config.habitaciones) %>;

            function generarFormulario() {
                const cantidad = document.getElementById('num_ocupaciones').value;
                const contenedor = document.getElementById('lista-ocupaciones');
                const btnGuardar = document.getElementById('btn-guardar');
                
                contenedor.innerHTML = ''; // Limpiar previo

                // Generar las opciones del Select una sola vez
                let opcionesHtml = '<option value="" disabled selected>Selecciona Habitaci贸n...</option>';
                habitacionesConfig.forEach(h => {
                    opcionesHtml += `<option value="${h.id}">${h.nombre} (${h.tipo}) - $${h.precio}</option>`;
                });

                for (let i = 0; i < cantidad; i++) {
                    const row = document.createElement('div');
                    row.className = 'fila-ocupacion card p-3 mb-2 border';
                    row.innerHTML = `
                        <div class="d-flex justify-content-between mb-2">
                            <span class="badge bg-secondary">Ocupaci贸n #${i + 1}</span>
                        </div>
                        <div class="mb-2">
                            <select name="habitacion_selec" class="form-select fw-bold" required>
                                ${opcionesHtml}
                            </select>
                        </div>
                        <div class="input-group input-group-sm">
                            <span class="input-group-text">Extra $</span>
                            <input type="number" name="extra_monto" class="form-control" placeholder="0">
                            <input type="text" name="extra_desc" class="form-control w-50" placeholder="Motivo (bebidas, etc)">
                        </div>
                    `;
                    contenedor.appendChild(row);
                }

                btnGuardar.style.display = 'block';
            }
        </script>
    <% } %>

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
